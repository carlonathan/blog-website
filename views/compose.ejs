<%- include("partials/header") -%>

    <h1>
        <%= pageTitle %>
    </h1>

    <form method="post" action="/compose">

        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" id="title" type="text" name="newPostTitle">
        </div>

        <div class="form-group">
            <label for="content">Post</label>
            <textarea class="form-control" id="content" name="newPostContent"></textarea>
        </div>

        <button class="btn btn-primary" type="submit" name="message">Publish</button>

    </form>

<%- include("partials/footer") -%>